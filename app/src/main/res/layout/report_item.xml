<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="10dp"
    android:background="#ffffff"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_nopol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:text="Nopol pengadu"
        style="bold"
        android:textColor="#000000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:text="Nama Pengadu"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_tipe_kendaraan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:text="Tipe kendaraan"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_nomor_rangka"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:text="Nomor rangka"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_nomor_mesin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:text="Nomor mesin"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_name_nomor_aduan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:text="Nomor aduan"
        android:textSize="14sp" />

</LinearLayout>